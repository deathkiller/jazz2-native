	"Elimination": false,
	"InitialPlayerHealth": -1,
	"MaxGameTimeSecs": 900,
	"PreGameSecs": 60,
	"SpawnInvulnerableSecs": 4,
	"TotalKills": 10,
	"TotalLaps": 3,
	"TotalTreasureCollected": 0,
	"OvertimeSecs": 0,
	
	/* Spectating */
	"EnableSpectate": true,
	"EnableFreeCamera": true,
